[Default]
bears = PEP8Bear, LineLengthBear, SpaceConsistencyBear
files = *.py, uiplib/**/*.py, tests/**/*.py
use_spaces = true
default_actions =
        SpaceConsistencyBear: ApplyPatchAction,
        PEP8Bear: ApplyPatchAction

[Documentation]
bears = PyDocStyleBear
files = *.py, uiplib/**/*.py
ignore = **/__init__.py
